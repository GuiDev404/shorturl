@{
    ViewData["Title"] = "ShrURL";
}

<div class="text-center">
    <h1 class="display-5 fw-bold">ShrURL</h1>
    <p class="lead"> Acortador de URL </p>
</div>

<div class="">

    <form action="/short" method="post" id="form_short_url">
        <label for="url" class="mb-2">Ingrese la url</label>

        <div class="input-group input-group-lg mb-3">
            <input type="url" name="url" id="url" class="form-control text-dark" placeholder="Ingrese la url para acortar" aria-label="Ingrese la url para acortar" aria-describedby="button-addon2">
            <button class="btn btn-dark" type="submit">Acortar</button>
        </div>
        <p id="error_url" class="text-danger small d-block mt-1"></p>

        <div class="bg-light border shadow-sm rounded-3 d-none p-2 d-flex justify-content-between align-items-center"
             id="result">
            <p id="result__url" class="m-0">  </p>

            <button type="button" class="btn btn-sm btn-dark" id="result__copy">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-copy">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M7 7m0 2.667a2.667 2.667 0 0 1 2.667 -2.667h8.666a2.667 2.667 0 0 1 2.667 2.667v8.666a2.667 2.667 0 0 1 -2.667 2.667h-8.666a2.667 2.667 0 0 1 -2.667 -2.667z" />
                    <path d="M4.012 16.737a2.005 2.005 0 0 1 -1.012 -1.737v-10c0 -1.1 .9 -2 2 -2h10c.75 0 1.158 .385 1.5 1" />
                </svg>
            </button>


        </div>
    </form>
</div>

